doctype html
html
  head
    = seo_meta_tags
    = csrf_meta_tags
    = csp_meta_tag
    <%- if options[:css] == 'tailwind' -%>

    = stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload"
    <%- elsif options[:css].blank? -%>

    = stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/@yohns/picocss@2.2.9/css/pico.min.css'
    = stylesheet_link_tag 'application', 'data-turbo-track': 'reload'
    = stylesheet_link_tag 'flash', 'data-turbo-track': 'reload'
    <%- end -%>
    = stylesheet_link_tag 'ribbon' unless Rails.env.production?

    = javascript_importmap_tags

  body
    = ribbonit unless Rails.env.production?

    main.container
      nav role="navigation"
        ul role="list"
          li
            = link_to root_path do
              h1 <%= camelized %>
        <%- if @locales.count > 1 -%>

        ul id="menu" role="list"
          li role="listitem"
            = render 'locale_switcher'
        <%- end -%>

      .row-fluid
        .col-lg-6.offset-lg-3
          #flash= render 'flash'
          = yield

    = render 'turbo_confirm'
